<% if logged_in? %>
<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for( @worker ) do |f| %>
      <p><%= f.label :name %>
      <%= f.text_field :name %></p>

      <p><%= f.label :email %>
      <%= f.email_field :email %></p>

      <p><%= f.label :bio %>
      <%= f.text_field :bio %></p>

      <p><%= f.label :role %>
      <%= f.text_field :role %></p>
      <%= f.file_field :avatar %>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= link_to "Log out", logout_path, method: :delete, class: "btn btn-primary" %>
<% end %>