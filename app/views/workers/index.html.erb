<div class="main">
<h1>Current Staff and Advisors</h1>
<% counter = 0 %> 
<% @worker.each do |w| %>
	<% if counter == 0 %>
		<div class="row">
	<% end %>
	<div class="col-sm-4 worker">
	<%= image_tag w.avatar.url(:thumb) %>
	 <p><%= w.name %></p>
	 <p><%= w.role %></p>
	 <p><%= w.email %></p>
	 </div>
 	<% counter = counter + 1 %>
 	<% if counter == 3 %>
 	<% counter = 0 %>
 		</div>
 	<% end %>
 <% end %>
</div>